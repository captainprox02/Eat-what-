<title>Store food</title>

<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4 text-center md:text-left">Create your food</h1>

        <form class="mt-8 space-y-6" action="/admin/store-food" method="post">
            <div class="rounded-md shadow-sm -space-y-px text-lg">
                <div>
                    <span>Name</span>
                    <input id="name" name="name" type="text" autocomplete="name" required
                        class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10">
                </div>
                <div class="py-4">
                    <span>Price</span>
                    <input id="price" name="price" type="number" autocomplete="price" required
                        class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10">
                </div>
                <div class="py-4">
                    <span>Image</span>
                    <input id="image" name="image" type="text" autocomplete="image" required
                        class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10">
                </div>
                <div class="py-4">
                    <span>Description</span>
                    <input id="description" name="description" type="text" autocomplete="description" required
                        class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10">
                </div>
                <div class="py-4">
                    <span>Size</span>
                    <input id="size" name="size" type="text" autocomplete="size" required
                        class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10">
                </div>

                <% if(messages.error) { %>
                    <span class="text-red-500 text-lg font-bold">
                        <%= messages.error %>
                    </span>
                <% } %>

                <% if(messages.success) { %>
                    <span class="text-red-500 text-lg font-bold">
                        <%= messages.success %>
                    </span>
                <% } %>
            </div>

            <div>
                <button type="submit"
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-lg font-bold rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 btn-primary">
                    Create
                </button>
            </div>
        </form>

    </div>
</section>